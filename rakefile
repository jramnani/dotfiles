require 'rubygems'
require 'rake'
require 'fileutils'
FileUtils::Verbose

task :default do
  # noop
end

task :test do
  bash_scripts = Dir["bash*"]
  bash_scripts.each do |file| 
    chmod 0700, file
    puts "Running syntax check on '#{file}'"
    %x[bash -c ./#{file}]
    chmod 0644, file
  end
end


desc "install the dot files into user's home directory"
task :install do
  # Create the directory where I place my Vim backup files.
  mkdir_p File.join(ENV['HOME'], 'tmp', 'vim')

  replace_all = false
  Dir['*'].each do |file|
    next if %w[Rakefile rakefile README LICENSE examples windows].include? file

    if File.exist?(File.join(ENV['HOME'], ".#{file}"))
      if replace_all
        replace_file(file)
      else
        print "overwrite ~/.#{file}? [ynaq] "
        case $stdin.gets.chomp
        when 'a'
          replace_all = true
          replace_file(file)
        when 'y'
          replace_file(file)
        when 'q'
          exit
        else
          puts "skipping ~/.#{file}"
        end
      end
    else
      link_file(file)
    end
  end
end

def replace_file(file)
  system %Q{rm "$HOME/.#{file}"}
  link_file(file)
end
 
def link_file(file)
  puts "linking ~/.#{file}"
  system %Q{ln -s "$PWD/#{file}" "$HOME/.#{file}"}
end

