# Emacs: -*-conf-*-

[color]
  ui = true

[alias]
  ci = 'commit'
  co = 'checkout'
  br = 'branch'
  up = 'checkout'
  st = status -sb
  # Incoming changes
  in = incoming
  # outgoing changes
  out = outgoing
  undo = reset --soft HEAD^
  unstage = reset HEAD --
  last = log -1 HEAD
  hist = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  w = whatchanged
[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
[github]
  user = jramnani
[credential]
  helper = osxkeychain
  helper = cache --timeout=3600
[push]
  default = upstream

[include]
  path = .gitconfig-user
[rerere]
	enabled = true
